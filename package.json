{
  "name": "@nandenjin/electron-ts-starter",
  "author": "Kazumi Inada <hello@nandenjin.com> (https://github.com/nandenjin)",
  "license": "MIT",
  "private": true,
  "version": "0.0.1",
  "main": "dist/main/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nandenjin/electron-ts-starter.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config config/webpack.config.js",
    "start": "run-s dev",
    "dev": "run-p dev:*",
    "dev:main": "webpack --config config/webpack.config.main.js -w",
    "dev:renderer": "webpack serve --mode development --config config/webpack.config.renderer.js",
    "dev:electron": "electron .",
    "lint": "eslint --ext js,ts .",
    "test": "jest"
  },
  "dependencies": {
    "electron": "^10.1.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.10",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.0",
    "electron-reload": "^1.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "file-loader": "^6.1.1",
    "html-webpack-plugin": "^4.5.0",
    "jest": "^26.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.3",
    "spectron": "^12.0.0",
    "style-loader": "^2.0.0",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.5",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.0.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-node-externals": "^2.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  }
}
