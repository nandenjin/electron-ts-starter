{
  "name": "@nandenjin/electron-ts-starter",
  "author": "Kazumi Inada <hello@nandenjin.com> (https://github.com/nandenjin)",
  "license": "MIT",
  "private": true,
  "version": "0.0.1",
  "main": "dist/main/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nandenjin/electron-ts-starter.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config config/webpack.config.js",
    "start": "run-s dev",
    "dev": "run-p dev:*",
    "dev:main": "webpack --config config/webpack.config.main.js -w",
    "dev:renderer": "webpack serve --mode development --config config/webpack.config.renderer.js",
    "dev:electron": "electron .",
    "lint": "run-s lint:*",
    "lint:script": "eslint --ext js,ts,jsx,tsx .",
    "lint:style": "stylelint ./src/**/*.{css,sass,scss}",
    "format": "prettier --write \"**/*.{ts,js,tsx,jsx,json,css,scss,sass,yml,yaml,md}\"",
    "test": "jest"
  },
  "dependencies": {
    "electron": "^13.1.8"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.12",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.2.0",
    "electron-reload": "^1.5.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": "=7",
    "jest": "^26.6.3",
    "lint-staged": ">=11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "sass": "^1.37.5",
    "sass-loader": "^12.1.0",
    "spectron": "^15.0.0",
    "style-loader": "^3.2.1",
    "stylelint": "^13.13.1",
    "stylelint-config-recess-order": "^2.4.0",
    "stylelint-config-standard": "^22.0.0",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --cache --fix",
    "*.{css,scss,sass}": "stylelint --fix",
    "*.{ts,js,tsx,jsx,json,css,scss,sass,yml,yaml,md}": "prettier --write"
  }
}
