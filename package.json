{
  "name": "@nandenjin/electron-ts-starter",
  "author": "Kazumi Inada <hello@nandenjin.com> (https://github.com/nandenjin)",
  "license": "MIT",
  "private": true,
  "version": "0.0.1",
  "main": "dist/main/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nandenjin/electron-ts-starter.git"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config config/webpack.config.js",
    "start": "run-s dev",
    "dev": "run-p dev:*",
    "dev:main": "webpack --config config/webpack.config.main.js -w",
    "dev:renderer": "webpack serve --mode development --config config/webpack.config.renderer.js",
    "dev:electron": "electron .",
    "lint": "run-s lint:*",
    "lint:script": "eslint --ext js,ts,jsx,tsx .",
    "lint:style": "stylelint ./src/**/*.{css,sass,scss}",
    "format": "prettier --write \"**/*.{ts,js,tsx,jsx,json,css,scss,sass,yml,yaml,md}\"",
    "test": "jest"
  },
  "dependencies": {
    "electron": "13.6.9"
  },
  "devDependencies": {
    "@types/jest": "27.4.1",
    "@types/node": "16.11.26",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "cross-env": "7.0.3",
    "css-loader": "6.7.1",
    "electron-reload": "1.5.0",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.3.7",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.1",
    "sass": "1.49.9",
    "sass-loader": "12.6.0",
    "spectron": "19.0.0",
    "style-loader": "3.3.1",
    "stylelint": "14.6.1",
    "stylelint-config-recess-order": "3.0.0",
    "stylelint-config-standard": "25.0.0",
    "ts-jest": "27.1.4",
    "ts-loader": "9.2.8",
    "ts-node": "10.7.0",
    "typescript": "4.6.3",
    "webpack": "5.70.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.7.4",
    "webpack-node-externals": "3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --cache --fix",
    "*.{css,scss,sass}": "stylelint --fix",
    "*.{ts,js,tsx,jsx,json,css,scss,sass,yml,yaml,md}": "prettier --write"
  }
}
